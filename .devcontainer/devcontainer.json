{
  "name": "Quarto LaTeX Dev",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "root",
  "postCreateCommand": "quarto check --quiet || true && uv pip install --system --break-system-packages -r ./document/requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "quarto.quarto"
      ],
      "settings": {
        "quarto.render.onSave": "current",
        "quarto.render.targetFormat": "pdf",
        "quarto.path": "/usr/bin/quarto",
        "files.watcherExclude": {
          "**/_build/**": true,
          "**/_freeze/**": true,
          "**/*_files/**": true,
          "**/*.aux": true,
          "**/*.log": true,
          "**/*.out": true,
          "**/*.toc": true
        }
      }
    }
  }
}
